#post_content
  %h1= @post.title
  %p= @post.content

  #comments
    %h2
      = @post.comments.count
      Komentar
    = render @post.comments

    %h3 Reply to post
    = render "comments/form"

  = link_to "Edit", edit_post_path(@post)
  = link_to "Hapus", post_path(@post), method: :delete, data: { confirm: "Are you sure?"  }
  = link_to "Beranda", root_path
